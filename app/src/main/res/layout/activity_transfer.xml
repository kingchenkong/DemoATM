<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="accountVM"
            type="com.kck.demoatm.interface_adapters.presenters.AccountViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".frameworks_devices.ui.TransferActivity">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_edge_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_edge_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_tv_account_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.1" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{accountVM.nowAccount.toString()}"
            android:textColor="@android:color/black"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@id/gl_tv_account_bot"
            app:layout_constraintEnd_toEndOf="@id/gl_edge_end"
            app:layout_constraintStart_toStartOf="@id/gl_edge_start"
            app:layout_constraintTop_toTopOf="@id/gl_tv_account_top" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_tv_account_bot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2" />

        <TextView
            android:id="@+id/tv_source_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source serial Number:"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/gl_edge_start"
            app:layout_constraintTop_toTopOf="@id/gl_tv_account_bot" />

        <EditText
            android:id="@+id/edit_source_sn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="#efefef"
            android:gravity="start"
            android:hint=""
            android:inputType="text"
            android:orientation="horizontal"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="@id/gl_edge_end"
            app:layout_constraintStart_toStartOf="@id/gl_edge_start"
            app:layout_constraintTop_toBottomOf="@id/tv_source_sn" />

        <TextView
            android:id="@+id/tv_source_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source serial Password:"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="@id/gl_edge_start"
            app:layout_constraintTop_toBottomOf="@id/edit_source_sn" />

        <EditText
            android:id="@+id/edit_source_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:background="#efefef"
            android:gravity="start"
            android:hint=""
            android:inputType="text"
            android:orientation="horizontal"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintEnd_toEndOf="@id/gl_edge_end"
            app:layout_constraintStart_toStartOf="@id/gl_edge_start"
            app:layout_constraintTop_toBottomOf="@id/tv_source_pwd" />

        <LinearLayout
            android:id="@+id/ll_use_mock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@id/gl_edge_end"
            app:layout_constraintStart_toStartOf="@id/gl_edge_start"
            app:layout_constraintTop_toBottomOf="@id/edit_source_pwd">

            <Button
                android:id="@+id/btn_mock1"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="Mock 1"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@id/gl_edge_end"
                app:layout_constraintStart_toStartOf="@id/gl_edge_start"
                app:layout_constraintTop_toTopOf="@id/gl_button_top" />

            <Button
                android:id="@+id/btn_mock2"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="Mock 2"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@id/gl_edge_end"
                app:layout_constraintStart_toStartOf="@id/gl_edge_start"
                app:layout_constraintTop_toTopOf="@id/gl_button_top" />
            <Button
                android:id="@+id/btn_mock3"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="Mock 3"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@id/gl_edge_end"
                app:layout_constraintStart_toStartOf="@id/gl_edge_start"
                app:layout_constraintTop_toTopOf="@id/gl_button_top" />

            <Button
                android:id="@+id/btn_mock4"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:text="Mock 4"
                android:textSize="10dp"
                app:layout_constraintEnd_toEndOf="@id/gl_edge_end"
                app:layout_constraintStart_toStartOf="@id/gl_edge_start"
                app:layout_constraintTop_toTopOf="@id/gl_button_top" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>